RewriteEngine On

# Redirect .php URLs to extensionless (even in subfolders)
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/+(.+?)\.php[\s?] [NC]
RewriteRule ^ /%1 [R=301,L]

# Internally rewrite extensionless URLs to .php (even in subfolders)
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+?)/?$ $1.php [L]
